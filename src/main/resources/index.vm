#parse("header.vm")

<h1>Find a Beer.  Right Now.</h1>

    <form class="form-horizontal" action="/search" method="get">
		<div class="form-group">
			<div class="col-md-10">
				<input class="input-lg form-control" type="text" name="query" placeholder="Enter a search term" />
			</div>
			<button class="btn btn-lg btn-primary col-md-2" type="submit">Search</button>
		</div>
		<div class="form-group">
			<input type="radio" name="search_type" value="all" checked="true"> Both</input>
			<input type="radio" name="search_type" value="beers"> Beers</input>
			<input type="radio" name="search_type" value="breweries"> Breweries</input>
		</div>
	</form>
 

